{% extends "layout.njk" %}


{% block content %}

<form class="card" method="POST" action="/teachers">
    <section class="avatar" style="background: url(https://source.unsplash.com/collection/517198/500x500) no-repeat center center"></section>
    <section class="details">
        
        <h3>Novo Professor</h3>

        <div class="item first">
            <div>Avatar URL</div>
            <div>
                <input 
                    type="url" 
                    name="avatar_url" 
                    placeholder="http://">
            </div>
        </div>

        <div class="item">
            <div>Teacher</div>
            <div>
                <input 
                    type="text" 
                    name="name" 
                    placeholder="Nome do(a) professor(a)">
            </div>
        </div>

        <div class="item">
            <div>Data de Nascimento</div>
            <div>
                <input 
                    type="date" 
                    name="birth">
            </div>
        </div>

        <div class="item">
            <div>Grau de escolaridade</div>
            <div>
                <select name="escolaridade">
                    <option value="medio">Ensino Médio Completo</option> 
                    <option value="superior">Ensino Superior Completo</option>
                    <option value="mba">Especialização</option>
                    <option value="mestrado">Mestrado</option>
                    <option value="doutorado">Doutorado</option>
                </select>
            </div>
        </div>
        
        <div class="item">
            <div>Tipo de aula</div>
            <div>
                <span><input type="radio" name="class_type" value="Presencial" checked>Presencial</span>
                <span><input type="radio" name="class_type" value="EAD">EAD</span>
            </div>
        </div>

        <div class="item">
            <div>Disciplinas de ensino</div>
            <div>
                <input 
                    type="text" 
                    name="disciplinas" 
                    placeholder="Separe as disciplinas por vírgula">
            </div>
        </div>

       <button type="submit">Salvar</button>
    
    </section>

</form>

{% endblock content %}

